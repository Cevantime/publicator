{% extends 'base.html.twig' %}

{% block title %}Impact factors{% endblock %}

{% block body %}
    <h1>{{ insight_type.name }}</h1>
    <table class="table">
        <thead>
        <th>Rank</th>
        <th>Journal</th>
        <th>{{ insight_type.name }}</th>
        </thead>
        <tbody>
            {% for insight in insights %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ insight.journal.name }}</td>
                    <td>{{ insight.value }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
